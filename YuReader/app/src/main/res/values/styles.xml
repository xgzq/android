<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <declare-styleable name="ABookPageView">
        <attr name="currentBackgroundColor" format="color"/>
        <attr name="bgBackgroundColor" format="color|reference"/>
        <attr name="nextBackgroundColor" format="color|reference"/>
        <attr name="previousBackgroundColor" format="color|reference"/>
    </declare-styleable>

</resources>
