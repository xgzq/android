<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sudoku_item_siv_shown_pressed" />
            <corners android:radius="@dimen/sudoku_item_siv_corners"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/sudoku_item_siv_shown_normal" />
            <corners android:radius="@dimen/sudoku_item_siv_corners"/>
        </shape>
    </item>

</selector>